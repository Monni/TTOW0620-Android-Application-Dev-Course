<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_kentta_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.h4211.exercise07.kentta_detail">


        <ImageView
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detail_kenttaImageView" />


        <TextView
            android:layout_toRightOf="@+id/detail_kenttaImageView"
            android:layout_alignParentTop="true"
            android:id="@+id/detail_osoiteTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

        <TextView
            android:layout_toRightOf="@+id/detail_kenttaImageView"
            android:layout_below="@id/detail_osoiteTextView"
            android:id="@+id/detail_puhelinTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

        <TextView
            android:layout_toRightOf="@+id/detail_kenttaImageView"
            android:layout_below="@id/detail_puhelinTextView"
            android:id="@+id/detail_sahkopostiTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detail_kuvausTextView"
        android:textSize="16sp"
        android:paddingTop="10dp"
        android:layout_below="@id/detail_sahkopostiTextView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/detail_kuvausTextView"
        android:id="@+id/detail_webstaticTextView"
        android:paddingTop="30dp"
        android:text="Katso kentän kotisivut:"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detail_webstaticTextView"
        android:id="@+id/detail_webbiTextView"
        android:onClick="detail_webbiClicked"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/detail_webbiTextView"
        android:id="@+id/detail_mapstaticTextView"
        android:text="Katso kentän sijainti:"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detail_mapTextView"
        android:layout_below="@+id/detail_mapstaticTextView"
        android:text="@string/map_text"
        android:onClick="detail_mapTextViewClicked"/>




</RelativeLayout>
